                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/heart" />

                <LinearLayout
