<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragment_settings_gender_selector_background_color"
    android:orientation="vertical"
    android:padding="@dimen/fragment_settings_gender_selector_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_settings_gender_selector_head_text"
        android:textColor="@color/fragment_settings_gender_selector_topic_color"
        android:textSize="@dimen/fragment_settings_gender_selector_head_text_text_size"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_settings_gender_selector_sub_head_text_margin_top"
        android:text="@string/fragment_settings_gender_selector_sub_head_text"
        android:textColor="@color/primaryColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radio_gender_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/fragment_settings_gender_selector_female_text"
                android:textColor="@color/primaryColor"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_settings_gender_selector_male_text"
                android:textColor="@color/primaryColor"
                android:textStyle="bold" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_settings_gender_selector_bottom_layout_margin_top"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fs_gender_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/fragment_settings_gender_selector_cancel_button_text"
            android:textColor="@color/primaryDarkColor" />

        <Button
            android:id="@+id/fs_gender_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/fragment_settings_gender_selector_ok_button_text"
            android:textColor="@color/primaryDarkColor" />
    </LinearLayout>

</LinearLayout>