<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragment_settings_language_selector_background_color"
    android:orientation="vertical"
    android:padding="@dimen/fragment_settings_language_selector_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_settings_language_selector_head_text"
        android:textColor="@color/fragment_settings_language_selector_topic_color"
        android:textSize="@dimen/fragment_settings_language_selector_head_text_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_settings_language_selector_message_parent_margin_top"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_settings_language_selector_message"
            android:textAlignment="center"
            android:textColor="@color/primaryColor"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_settings_language_selector_bottom_layout_margin_top"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fs_language_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/fragment_settings_language_selector_cancel_button"
            android:textColor="@color/primaryDarkColor" />

        <Button
            android:id="@+id/fs_language_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/fragment_settings_language_selector_ok_button"
            android:textColor="@color/primaryDarkColor" />

    </LinearLayout>

</LinearLayout>